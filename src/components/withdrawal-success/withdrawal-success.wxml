<view class="message" wx:if="{{active}}">
  <view class="mask" />
  <view class="panel">
    <image class="bg" src="/assets/imgs/message/msg.png" />
    <!-- 关闭 -->
    <view class="btn-close" hover-class="btn-hover" bind:tap="close">
      <image class="bg" src="/assets/imgs/invite-confirm/btn-close.png" />
    </view>
    <view class="content">{{content}}</view>
    <view class="code">{{code}}</view>
    <button class="btn-withdrawal btn-clean-default" open-type="contact" hover-class="btn-hover" bind:tap="close">
      <view class="btn-in">
        <image class="bg" src="/assets/imgs/user/btn-ex.png" />
        <view class="info">联系客服</view>
      </view>
    </button>
  </view>
</view>
