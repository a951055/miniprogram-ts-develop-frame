<view class="signin-valiation" wx:if="{{active}}">
  <view class="mask" />
  <view class="panel">
    <image class="bg" src="/assets/imgs/signin-valiation/panel.png" />
    <view class="btn-close" hover-class="btn-hover" bind:tap="onTap" data-method="close">
      <image class="bg" src="/assets/imgs/signin-valiation/btn-close.png" />
    </view>
    <input class="input" placeholder="邀请码" bindinput="onInput" value="{{code}}" maxlength="8" focus type="text" />
    <view class="btn-confirm" hover-class="btn-hover" bind:tap="onTap" data-method="confirm">
      <image class="bg" src="/assets/imgs/signin-valiation/btn-confirm.png" />
    </view>
  </view>
</view>
